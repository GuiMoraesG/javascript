{{#each erros}}

<div class="alert alert-danger">
    {{texto}}
</div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{p._id}}">
            <label for="titulo">Título: </label>
            <input type="text" value="{{p.titulo}}" name="titulo" class="form-control">

            <label for="slug">Slug: </label>
            <input type="text" value="{{p.slug}}" name="slug" class="form-control">

            <label for="descricao">Descrição: </label>
            <input type="text" value="{{p.descricao}}" name="descricao" class="form-control">

            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control">{{p.conteudo}}</textarea>

            <label for="categoria">Categoria: </label>

            <select name="categoria" id="categoria">
                <option value="{{_id}}">{{cat.nome}}</option>
            </select>

            <button class="btn btn-success mt-2" type="submit">Editar postagem</button>
        </form>
    </div>
</div>