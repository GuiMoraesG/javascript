<h2>Lista de Postagens: </h2>
<hr>
<a href="/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>


{{#each posts}}

<div class="card mt-2">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria}}</small><br>
        <a href="/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
        <a href="/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar Postagem</button></a>
    </div>
</div>

{{else}}
<p>Nenhuma postagem registrada</p>
{{/each}}